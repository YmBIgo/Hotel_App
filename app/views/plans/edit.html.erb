<div class="card" style="padding:20px;">
	<h3>プラン作成する</h3>
	<%= form_for @plan do |f| %>
		<p>タイトル　
		<%= f.text_field :title, :class => "form-control", :style => "width:60%" %>
		</p>
		<p>部屋人数　
		<%= f.number_field :people_num, :class => "form-control", :style => "width:60%" %>
		</p>
		<p>価格　
		<%= f.number_field :price, :class => "form-control", :style => "width:60%" %>
		</p>
		<p>説明
		<%= f.text_area :explanation, :class => "form-control", :style => "width:60%;height:80px;" %>
		</p>
		<p>HTML説明
		<%= f.text_area :html_content, :class => "form-control", :style => "width:60%;height:150px;" %>
		</p>
		<%= f.submit "更新する", :class => "btn btn-sm btn-info" %>
	<% end %>
</div>